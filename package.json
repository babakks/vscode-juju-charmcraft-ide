{
    "name": "vscode-juju-charms-ide",
    "displayName": "Juju Charms IDE",
    "description": "VS Code extension for Juju Charm development",
    "version": "0.0.1",
    "publisher": "babakks",
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "juju",
        "charm",
        "charmcraft"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "extensionDependencies": [
        "redhat.vscode-yaml"
    ],
    "contributes": {
        "commands": [
            {
                "command": "vscode-juju-charms-ide.helloWorld",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "test-local": "npm run compile && mocha ./out/test/local"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@types/chai": "^4.3.5",
        "@types/js-yaml": "^4.0.5",
        "chai": "^4.3.7",
        "handlebars": "^4.7.7",
        "js-yaml": "^4.1.0"
    }
}
